<mvc:View controllerName="sap.support.sccd.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:mc="sap.suite.ui.microchart">
	<!-- <Page> -->
		<HeaderContainer showDividers="true">
			<TileContent footer="Total Projects">
				<content>
					<NumericContent value="{kpi>/TotalProjects}"
						valueColor="Neutral"
						indicator="None"
						icon="sap-icon://sap-ui5" />
				</content>
			</TileContent>
			<TileContent unit="" footer="Top 3 Active">
				<content>
					<mc:ComparisonMicroChart
						isResponsive="true"
						data="{kpi>/TopActive}">
						<mc:data>
							<mc:ComparisonMicroChartData
								title="{kpi>ProjectName}"
								value="{kpi>TotalCase}"
								displayValue="{kpi>TotalCase}"
								color="Good" />
						</mc:data>
					</mc:ComparisonMicroChart>
				</content>
			</TileContent>
			<TileContent footer="Healthy UT Projects">
				<content>
					<mc:DeltaMicroChart
						isResponsive="true"
						color="Error"
						value1="{kpi>/TotalProjects}"
						value2="{kpi>/HealthyUTProjects}"
						title1="{i18n>titleTotal}"
						title2="{i18n>titleUnhealthyUTProject}"
						displayValue1="{kpi>/TotalProjects}"
						displayValue2="{kpi>/HealthyUTProjects}"
						deltaDisplayValue="{
							parts: [
								'kpi>/TotalProjects',
								'kpi>/HealthyUTProjects'
							],
							formatter: '.getValuesDelta'
						}" />
				</content>
			</TileContent>
			<TileContent footer="UT Case Number">
				<content>
					<mc:LineMicroChart
						size="Responsive"
						threshold="{kpi>/fillLevel/threshold}"
						leftTopLabel="{kpi>/fillLevel/valueBegin}"
						leftBottomLabel="{kpi>/fillLevel/timeBegin}"
						rightTopLabel="{kpi>/fillLevel/valueEnd}"
						rightBottomLabel="{kpi>/fillLevel/timeEnd}"
						color="{kpi>/fillLevel/color}"
						showPoints="true"
						points="{
							path: 'kpi>/fillLevel/timeSeries',
							templateShareable: true
						}">
						<mc:LineMicroChartPoint
							x="{kpi>time}"
							y="{kpi>level}" />
					</mc:LineMicroChart>
				</content>
			</TileContent>
			<TileContent footer="Healthy IT Projects">
				<content>
					<mc:DeltaMicroChart
						isResponsive="true"
						color="Critical"
						value1="{kpi>/TotalProjects}"
						value2="{kpi>/HealthyITProjects}"
						title1="{i18n>titleTotal}"
						title2="{i18n>titleUnhealthyITProject}"
						displayValue1="{kpi>/TotalProjects}"
						displayValue2="{kpi>/HealthyITProjects}"
						deltaDisplayValue="{
							parts: [
								'kpi>/TotalProjects',
								'kpi>/HealthyITProjects'
							],
							formatter: '.getValuesDelta'
						}" />
				</content>
			</TileContent>

		</HeaderContainer>
	<!-- </Page> -->
</mvc:View>